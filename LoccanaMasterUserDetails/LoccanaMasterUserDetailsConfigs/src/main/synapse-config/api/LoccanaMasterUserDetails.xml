<?xml version="1.0" encoding="UTF-8"?>
<api context="/loccana/master/user_details" name="LoccanaMasterUserDetails" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="POST">
        <inSequence>
            <validate cache-schema="true" source="json-eval($)">
                <schema key="conf:schema/LoccanaMasterUserDetailsUpsert.json"/>
                <on-fail>
                    <property description="Error Message" expression="$ctx:ERROR_MESSAGE" name="message" scope="default" type="STRING"/>
                    <sequence key="LoccanaMasterGetResponseError"/>
                </on-fail>
            </validate>
            <log description="Log start" level="custom">
                <property name="Log Message" value="Insert data coa"/>
            </log>
            <propertyGroup description="Parameter Input">
                <property expression="json-eval($.nama)" name="nama" scope="default" type="STRING"/>
                <property expression="json-eval($.image)" name="image" scope="default" type="STRING"/>
                <property expression="get-property('SYSTEM_DATE', 'yyyy-MM-dd HH:mm:ss')" name="currentDate" scope="default" type="STRING"/>
            </propertyGroup>
            <dataServiceCall description="Create user details" serviceName="LoccanaMasterUserDetailsDataService">
                <operations type="single">
                    <operation name="createUserDetails">
                        <param evaluator="xml" expression="get-property('nama')" name="nama"/>
                        <param evaluator="xml" expression="get-property('image')" name="image"/>
                        <param evaluator="xml" expression="get-property('currentDate')" name="created_at"/>
                        <param evaluator="xml" expression="get-property('currentDate')" name="updated_at"/>
                    </operation>
                </operations>
                <source type="inline"/>
                <target type="body"/>
            </dataServiceCall>
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property description="Result" expression="json-eval($)" name="result" scope="default" type="STRING"/>
            <filter regex="false" source="boolean(get-property('result'))">
                <then>
                    <property description="Error Message" name="message" scope="default" type="STRING" value="Gagal menambahkan User Details"/>
                    <sequence key="LoccanaMasterGetResponseError"/>
                </then>
                <else>
                    <property description="Success Message" name="message" scope="default" type="STRING" value="Tambah User details berhasil."/>
                    <property description="Success data" expression="json-eval($.return)" name="data" scope="default" type="STRING"/>
                    <sequence key="LoccanaMasterGetResponseSuccess"/>
                </else>
            </filter>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <property description="ErrorMessage" expression="get-property('ERROR_MESSAGE')" name="message" scope="default" type="STRING"/>
            <sequence key="LoccanaMasterGetResponseError"/>
        </faultSequence>
    </resource>
    <resource methods="GET" uri-template="/{id}">
        <inSequence>
            <property description="user details Id" expression="get-property('uri.var.id')" name="userdetailsId" scope="default" type="STRING"/>
            <log description="Log start" level="custom">
                <property expression="get-property('userdetailsId')" name="Get detail user detail id"/>
            </log>
            <sequence key="LoccanaMasterUserDetailsGetDetail"/>
            <filter regex="false" source="boolean(get-property('data'))">
                <then>
                    <property description="Error Message" name="message" scope="default" type="STRING" value="user details tidak ditemukan."/>
                    <sequence key="LoccanaMasterGetResponseError"/>
                </then>
                <else>
                    <property description="Success Message" name="message" scope="default" type="STRING" value="user details ditemukan."/>
                    <sequence key="LoccanaMasterGetResponseSuccess"/>
                </else>
            </filter>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <property description="ErrorMessage" expression="get-property('ERROR_MESSAGE')" name="message" scope="default" type="STRING"/>
            <sequence key="LoccanaMasterGetResponseError"/>
        </faultSequence>
    </resource>
    <resource methods="PUT" uri-template="/{id}">
        <inSequence>
            <property description="get coaid" expression="get-property('uri.var.id')" name="userdetailsId" scope="default" type="STRING"/>
            <validate cache-schema="true" source="json-eval($)">
                <schema key="conf:schema/LoccanaMasterUserDetailsUpsert.json"/>
                <on-fail>
                    <property description="Error Message" expression="$ctx:ERROR_MESSAGE" name="message" scope="default" type="STRING"/>
                    <sequence key="LoccanaMasterGetResponseError"/>
                </on-fail>
            </validate>
            <propertyGroup description="Parameter Update">
                <property expression="get-property('uri.var.id')" name="userdetailsId" scope="default" type="STRING"/>
                <property expression="json-eval($.nama)" name="nama" scope="default" type="STRING"/>
                <property expression="json-eval($.image)" name="image" scope="default" type="STRING"/>
                <property expression="get-property('SYSTEM_DATE', 'yyyy-MM-dd HH:mm:ss')" name="currentDate" scope="default" type="STRING"/>
            </propertyGroup>
            <log description="Log start" level="custom">
                <property expression="get-property('userdetailsId')" name="Update user details id"/>
            </log>
            <sequence key="LoccanaMasterUserDetailsGetDetail"/>
            <filter regex="false" source="boolean(get-property('data'))">
                <then>
                    <property description="Error Message" name="message" scope="default" type="STRING" value="user detail tidak ditemukan."/>
                    <sequence key="LoccanaMasterCoasGetResponseError"/>
                </then>
                <else>
                    <property action="remove" name="data" scope="default"/>
                    <log description="Log start" level="custom">
                        <property expression="get-property('result')" name="debug"/>
                    </log>
                </else>
            </filter>
            <dataServiceCall description="Update coa" serviceName="LoccanaMasterUserDetailsDataService">
                <operations type="single">
                    <operation name="updateUserDetails">
                        <param evaluator="xml" expression="get-property('nama')" name="nama"/>
                        <param evaluator="xml" expression="get-property('image')" name="image"/>
                        <param evaluator="xml" expression="get-property('currentDate')" name="updated_at"/>
                        <param evaluator="xml" expression="get-property('userdetailsId')" name="id"/>
                    </operation>
                </operations>
                <source type="inline"/>
                <target type="body"/>
            </dataServiceCall>
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property description="Get update status" expression="json-eval($.UpdatedRowCount.id)" name="result" scope="default" type="STRING"/>
            <log description="Log start" level="custom">
                <property expression="get-property('result')" name="debug"/>
            </log>
            <filter regex="1" source="get-property('result')">
                <then>
                    <property description="Success Message" name="message" scope="default" type="STRING" value="Update user detail berhasil."/>
                    <sequence key="LoccanaMasterGetResponseSuccess"/>
                </then>
                <else>
                    <property description="Error Message" name="message" scope="default" type="STRING" value="Update user detail gagal."/>
                    <sequence key="LoccanaMasterGetResponseError"/>
                </else>
            </filter>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <property description="ErrorMessage" expression="get-property('ERROR_MESSAGE')" name="message" scope="default" type="STRING"/>
            <sequence key="LoccanaMasterCoasResponseError"/>
        </faultSequence>
    </resource>
    <resource methods="DELETE" uri-template="/{id}">
        <inSequence>
            <propertyGroup description="Parameter Update">
                <property expression="get-property('uri.var.id')" name="userdetailsId" scope="default" type="STRING"/>
            </propertyGroup>
            <log description="Log start" level="custom">
                <property expression="get-property('userdetailsId')" name="Delete coa id"/>
            </log>
            <sequence key="LoccanaMasterUserDetailsGetDetail"/>
            <filter regex="false" source="boolean(get-property('data'))">
                <then>
                    <property description="Error Message" name="message" scope="default" type="STRING" value="user detail tidak ditemukan."/>
                    <sequence key="LoccanaMasterResponseError"/>
                </then>
                <else>
                    <property action="remove" name="data" scope="default"/>
                </else>
            </filter>
            <dataServiceCall description="Delete coa" serviceName="LoccanaMasterUserDetailsDataService">
                <operations type="single">
                    <operation name="deleteUserDetails">
                        <param evaluator="xml" expression="get-property('userdetailsId')" name="id"/>
                    </operation>
                </operations>
                <source type="inline"/>
                <target type="body"/>
            </dataServiceCall>
            <property name="messageType" scope="axis2" type="STRING" value="application/json"/>
            <property description="Get update status" expression="json-eval($.UpdatedRowCount.id)" name="result" scope="default" type="STRING"/>
            <filter regex="1" source="get-property('result')">
                <then>
                    <property description="Success Message" name="message" scope="default" type="STRING" value="Delete userdetailsId berhasil."/>
                    <sequence key="LoccanaMasterGetResponseSuccess"/>
                </then>
                <else>
                    <property description="Error Message" name="message" scope="default" type="STRING" value="Delete userdetailsId gagal."/>
                    <sequence key="LoccanaMasterGetResponseError"/>
                </else>
            </filter>
        </inSequence>
        <outSequence/>
        <faultSequence>
            <property description="ErrorMessage" expression="get-property('ERROR_MESSAGE')" name="message" scope="default" type="STRING"/>
            <sequence key="LoccanaMasterGetResponseError"/>
        </faultSequence>
    </resource>
</api>
